<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssttkkl.fgoplanningtool">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.editplan.EditPlanActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.costitemlist.CostItemListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.preferences.PreferencesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.databasemanage.DatabaseManageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>